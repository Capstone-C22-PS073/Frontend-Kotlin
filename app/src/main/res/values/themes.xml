<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Toursight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tertiary_color</item>
        <item name="colorSecondaryVariant">@color/quaternary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HeaderText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubHeaderText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubtitleText">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="DescriptionText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>